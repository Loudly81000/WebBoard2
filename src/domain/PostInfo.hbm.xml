<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

    <class name="domain.PostInfo" table="post_list">

        <id name="id" column="id">
            <generator class="native"/>
        </id>

        <property name="title" column="title"></property>

        <property name="user" column="user"></property>

        <property name="message" column="message"></property>

        <property name="releasedate" column="releasedate"></property>

        <property name="deadline" column="deadline"></property>

    </class>

</hibernate-mapping>